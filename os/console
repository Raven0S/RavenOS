term.setTextColor(colors.white)
term.setBackgroundColor(colors.black)
term.clear()
term.setCursorPos(1,1)
print("RavenOS Console "..config.version)
print("Type 'dsktp' to go to desktop mode")
print("")

while true do
  term.setTextColor(colors.red)
  write(">> ")
  cmd = read()
  term.setTextColor(colors.white)
  shell.run(cmd)
end
